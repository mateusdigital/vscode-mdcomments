{
  "name": "mdcomments",
  "displayName": "md:Comments",
  "description": "Tool to add line and multiline fancy comments",
  "publisher": "mateus.digital",
  "repository": "https://github.com/mateusdigital/vscode-mdcomments",
  "bugs": "https://github.com/mateusdigital/vscode-mdcomments/issues",
  "website": "https://mateusdigital.com/projects/mdcomments",

  "main": "./out/extension.js",
  "icon": "res/images/icon.png",

  "version": "1.0.0",
  "build": 0,
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "mdcomments.singleLineComment",
        "title": "Single Line Comment"
      },
      {
        "command": "mdcomments.multiLineComment",
        "title": "Multi Line Comment"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "json5": "^2.2.3"
  }
}